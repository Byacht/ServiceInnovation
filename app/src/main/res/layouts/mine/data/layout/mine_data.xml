<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">
    <RelativeLayout
        android:id="@+id/mine_data_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F7F7F7">
        <ImageView
            android:id="@+id/mine_data_title_back"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_icon"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完善资料（1/2）"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/noto_sans"/>
        <TextView
            android:id="@+id/mine_data_title_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:fontFamily="@font/noto_sans"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />
    </RelativeLayout>
    <android.support.v4.widget.CircleImageView
        android:id="@+id/mine_data_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/photo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mine_data_title"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_data_avatar"
        android:layout_marginTop="19dp"
        android:layout_centerHorizontal="true"
        android:text="请上传头像"
        android:fontFamily="@font/noto_sans"/>
     <include layout="@layout/mine_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/mine_data_avatar"
        android:layout_marginTop="53dp"/>
     <include layout="@layout/mine_gender"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/mine_data_name_rl"
         android:layout_marginTop="1dp"/>
     <include layout="@layout/mine_nickname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/mine_data_gender_rl"
         android:layout_marginTop="1dp"/>
     <include layout="@layout/mine_residence"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/mine_data_nickname_rl"
         android:layout_marginTop="1dp"/>
    <include layout="@layout/mine_school"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/mine_data_residence_rl"
        android:layout_marginTop="1dp"/>
    <include layout="@layout/mine_profession"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_below="@id/mine_data_school_rl"
        android:layout_marginTop="1dp"/>
    <include layout="@layout/mine_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/mine_data_profession_rl"
        android:layout_marginTop="1dp"/>
    <include layout="@layout/mine_mail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/mine_data_phone_rl"
        android:layout_marginTop="1dp"/>
</RelativeLayout>